	file = {Full Text PDF:/Users/scollis/Library/Application Support/Zotero/Profiles/z5eo3nre.default/zotero/storage/3BXTEEBC/Heistermann et al. - 2015 - An Open Virtual Machine for Cross-Platform Weather.pdf:application/pdf;Snapshot:/Users/scollis/Library/Application Support/Zotero/Profiles/z5eo3nre.default/zotero/storage/4MQ3XIV4/BAMS-D-14-00220.html:text/html}
}

@article{zhang_constrained_1997,
	title = {Constrained {Variational} {Analysis} of {Sounding} {Data} {Based} on {Column}-{Integrated} {Budgets} of {Mass}, {Heat}, {Moisture}, and {Momentum}: {Approach} and {Application} to {ARM} {Measurements}},
