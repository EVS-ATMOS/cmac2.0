@article{moeng_tropical_2009,
	title = {The {Tropical} {Marine} {Boundary} {Layer} {Under} a {Deep} {Convection} {System}: a {Large}-{Eddy} {Simulation} {Study}},
	volume = {1},
	copyright = {Copyright 2009 by the American Geophysical Union.},
